extends @src/layouts/default

block content
    section.main-screen
        .container
            .text-wrapper
                span.repname Webpack Layout Template
                h1 Шаблон для разработки и генерации статичных сайтов в Webpack
            .slider-wrapper
                .owl-carousel
                    mixin LogoSlide(img, href)
                        a(href=href target="_blank").logo-slide
                            img(src=img)
                    +LogoSlide('@assets/images/icons/webpack.svg', 'https://webpack.js.org/')
                    +LogoSlide('@assets/images/icons/pug.svg', 'https://pugjs.org/')
                    +LogoSlide('@assets/images/icons/scss.svg', 'https://sass-lang.com/')
                    +LogoSlide('@assets/images/icons/javascript.svg', 'https://developer.mozilla.org/en/docs/Web/JavaScript/Reference')
                    +LogoSlide('@assets/images/icons/jquery.svg', 'https://jquery.com/')
    section.docs-content
        .container
            h2 Simple Lightbox
            a.lightbox(href="@assets/images/image.jpg")
                img(src="@assets/images/image.jpg")
            h2 jQuery Modal
            .modal#ex1
                p Modal text
                a(href="" rel="modal:close") Close
            p
                a(href="#ex1" rel="modal:open") Open Modal
            h2 jQuery Mask
            input.phone